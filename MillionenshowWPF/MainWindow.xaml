<Window x:Class="MillionenshowWPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MillionenshowWPF"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <TextBlock Text="{Binding Frage}"></TextBlock>
        <TextBlock Text="{Binding Antwort1}"/>
        <TextBlock Text="{Binding Antwort2}"/>
        <TextBlock Text="{Binding Antwort3}"/>
        <TextBlock Text="{Binding Antwort4}"/>
        <TextBox Text="{Binding Eingabe, UpdateSourceTrigger=PropertyChanged}"/>
        <TextBlock Text="{Binding Ergebnis}"/>
    </StackPanel>
</Window>
